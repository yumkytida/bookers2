<p id="notice">
 <%= notice %>
</p>
<div class="col-xs-3">
<%= render 'layouts/index', user:@user, book:@book_new %>
</div>
<div class='col-xs-9'>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th><h2>Book detail<h2></th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
	<tr>
	<%= link_to user_path(@book.user) do %>
	<td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "50x50",  class: "pull-left profile-img", fallback: "no_image.jpg" %></td>
	<% end %>
	<td><%= link_to @book.user.name, user_path(@book.user) %></td>
	<td><%= link_to @book.title, book_path(@book) %></td>
	<td><%= @book.body %></td>
	<% if @book.user == current_user %>
	<td><%= link_to "Edit", edit_book_path(@book) %></td>
	<td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
	<% end %>
	</tr>
</tbody>
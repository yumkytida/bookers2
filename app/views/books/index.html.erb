<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <%= @book.errors.count %>errors
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="col-xs-3">
<%= render 'layouts/index', user:@user, book:@book %>
</div>
<div class='col-xs-9'>
<table class="table table-hover table-inverse">
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
<h2>Books</h2>
<% @books.each do |book| %>
<tr>
  <%= link_to user_path(book.user) do %>
	<td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "50x50",  class: "pull-left profile-img", fallback: "no_image.jpg" %></td>
<% end %>
	<td><%= link_to book.title, book_path(book.id) %></td>
	<td><%= book.body %></td>
</tr>
<% end %>
</tbody>
</table>
</div>
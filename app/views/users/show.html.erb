<div class="col-xs-3">
<%= render 'layouts/index', user:@user, book:@book %>
</div>
<div class='col-xs-9'>
	<h1>Books</h1>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
		<td><%=link_to book.title, book_path(book) %></td>
		<td><%=book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>

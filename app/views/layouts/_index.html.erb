<h1>User info</h1>
	<table class = "table">
			<tr><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100",  class: "pull-left profile-img", fallback: "no_image.jpg" %></tr>
			<tr>
				<td>name</td>
				<td><%= user.name %></td>
			</tr>
			<tr>
				<td>introduction</td>
				<td><%= user.introduction %></td>
			</tr>
	        <%# if @user.id == current_user.id %>
	</table>
	<% if user == current_user %>
	<p><%= link_to '',edit_user_path(user),class: "btn btn-default btn-block glyphicon glyphicon-wrench" %></p>
	<% end %>
	<h1>New book</h1>
	<%= form_for(book) do |f| %>
		<h4>Title</h4>
		<%= f.text_field :title ,class: "form-control" %>
		<h4>Opinion</h4>
		<%= f.text_area :body ,class: "form-control"%>
		<%= f.submit 'Create Book',class: "btn btn-primary btn-block" %>
	<% end %>